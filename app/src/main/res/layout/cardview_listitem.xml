<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/regular_space_one"
    android:layout_marginRight="@dimen/regular_space_one"
    android:layout_marginLeft="@dimen/regular_space_one"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="100dp"
        android:layout_margin="@dimen/regular_space_one"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/layout_poster"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/regular_space_one"
            >
            <ProgressBar
                android:id="@+id/progress_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:visibility="visible"
                />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="85dp"
                android:id="@+id/img_poster"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_poster_standart"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_info"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/layout_poster"
            android:layout_toEndOf="@+id/layout_poster"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/regular_space_one"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:id="@+id/txt_title"
                android:text=""/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_year"
                android:text=""/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:tint="@color/darker_gray"
            android:id="@+id/img_forward"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_arrow_forward_black_24dp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_toLeftOf="@+id/img_forward"
            android:tint="@color/darker_gray"
            android:layout_alignParentBottom="true"
            android:paddingRight="@dimen/regular_space_two"
            android:paddingEnd="@dimen/regular_space_two"
            android:paddingLeft="@dimen/regular_space_two"
            android:paddingStart="@dimen/regular_space_two"
            android:paddingTop="@dimen/regular_space_two"
            android:contentDescription="@string/app_name"
            android:background="?selectableItemBackground"
            android:layout_marginRight="@dimen/regular_space_two"
            android:layout_marginEnd="@dimen/regular_space_two"
            android:src="@drawable/ic_save_black_24dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>