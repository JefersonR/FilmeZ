<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    style="@style/Theme.AppCompat.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/regular_space_two"
    android:paddingRight="@dimen/regular_space_two"
    android:paddingLeft="@dimen/regular_space_two"
    android:paddingBottom="@dimen/regular_space_one"
    android:background="@drawable/rounded_border_edittext"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/regular_space_one"
        android:layout_marginBottom="@dimen/regular_space_two"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:maxLines="13"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/regular_space_one"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_send"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/regular_space_two"
            android:layout_weight="1"
            android:background="@drawable/rounded_register_button_selector"
            android:fontFamily="sans-serif"
            android:text="Confirmar"
            android:textColor="@color/white"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/regular_space_two"
            android:layout_weight="1"
            android:background="@drawable/rounded_register_button_selector_gray_dark"
            android:fontFamily="sans-serif"
            android:text="Cancelar"
            android:textColor="@color/white"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>