<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/regular_space_one"
    android:layout_marginRight="@dimen/regular_space_one"
    android:layout_marginLeft="@dimen/regular_space_one"
    android:background="?selectableItemBackground"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="185dp"
        android:layout_margin="@dimen/regular_space_one"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/layout_poster"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/regular_space_one"
            >
            <ProgressBar
                android:id="@+id/progress_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:visibility="visible"
                />
            <ImageView
                android:layout_width="120dp"
                android:layout_height="170dp"
                android:id="@+id/img_poster"
                android:contentDescription="@string/app_name"
                android:src="@drawable/poster"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_info"
            android:visibility="visible"
            android:layout_toRightOf="@+id/layout_poster"
            android:layout_toEndOf="@+id/layout_poster"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/regular_space_one"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/txt_title"
                android:text="Dragon Ball Z - Revenge of F"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_year"
                android:text="Year: 2012"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_director"
                android:text="Director: Akira Toriama"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_note"
                android:text="Metacritic : 8.9"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_rotten"
                android:text="Rotten : 8.9"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="@dimen/regular_space_two"
            android:paddingStart="@dimen/regular_space_two"
            android:paddingRight="0dp"
            android:paddingEnd="0dp"
            android:paddingTop="@dimen/regular_space_two"
            android:tint="@color/darker_gray"
            android:id="@+id/img_save"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_save_black_24dp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="@dimen/regular_space_two"
            android:paddingStart="@dimen/regular_space_two"
            android:paddingRight="0dp"
            android:paddingEnd="0dp"
            android:paddingTop="@dimen/regular_space_two"
            android:tint="@color/darker_gray"
            android:id="@+id/img_delete"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_delete_black_24dp"/>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>